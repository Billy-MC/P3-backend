{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"es6": true
	},
	"plugins": ["prettier"],
	"parser": "@typescript-eslint/parser",
	"extends": [
		"airbnb/base",
		"plugin:@typescript-eslint/recommended",
		"plugin:import/errors",
		"plugin:import/warnings",
		"plugin:import/typescript",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2021,
		"project": "./tsconfig.json",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "off",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off",
		"no-shadow": "off",
		"arrow-parens": ["error", "as-needed"],
		"allowIndentationTabs": "off",
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		]
	}
}

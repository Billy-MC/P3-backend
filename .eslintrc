{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"es6": true
	},
	"plugins": ["prettier"],
	"extends": ["airbnb-base", "airbnb", "plugin:node/recommended"],
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "off",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off",
		"no-shadow": "off",
		"arrow-parens": ["error", "as-needed"],
		"allowIndentationTabs": true
	}
}
